<div class="flex flex-col w-full">
<% @notifications.each do |record| %>
  <div class="mt-6 p-6 w-full bg-white rounded-lg border border-gray-200 shadow-md dark:bg-gray-800 dark:border-gray-700">
    <p class="mb-3 font-normal text-rose-500">
      <%= record.message %> -> <%= time_ago_in_words record.created_at %> ago
    </p>
    <% if record.item_type == "Comment" %>
      <p class="mb-3 font-normal text-white">
        <%= strip_tags(record.item&.content) %>
      </p>
    <% end %>
    <%= link_to notification_target_url(record), data: { turbo: false }, class: "inline-flex items-center py-2 px-3 text-sm font-medium text-center text-white bg-blue-700 rounded-lg hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800" do %>
      Go
      <svg aria-hidden="true" class="ml-2 -mr-1 w-4 h-4" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"></path></svg>
    <% end %>
  </div>
<% end %>
</div>