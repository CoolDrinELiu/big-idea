<div class="w-full flex-col justify-between flex">
  <% @group.posts.each do |post| %>
    <div class="mt-5 block p-6 max-w-4xl bg-white rounded-lg border border-gray-200 shadow-md hover:bg-gray-100 dark:bg-gray-800 dark:border-gray-700 dark:hover:bg-gray-700">
        <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white"><%= post.title %></h5>
        <p class="font-normal text-gray-700 dark:text-gray-400"><%= post.content.truncate(300) %></p>
    </div>
  <% end %>
</div>

<div class="w-1/3">
  <div class="mb-6">
    <kbd class="px-2 py-1.5 text-xs font-semibold text-gray-800 bg-gray-100 border border-gray-200 rounded-lg dark:bg-gray-600 dark:text-gray-100 dark:border-gray-500">Members</kbd>    
      <%= render "member_list" %>
  </div>
  <% if @is_admin %>
    <div class="mb-6">
      <kbd class="px-2 py-1.5 text-xs font-semibold text-gray-800 bg-gray-100 border border-gray-200 rounded-lg dark:bg-gray-600 dark:text-gray-100 dark:border-gray-500">Pending Requests</kbd>
      <%= turbo_frame_tag "pending_list" do %>
        <%= render "pending_list" %>
      <% end %>
    </div>
    <% if @group.in_secret? %>
      <div class="mt-6">
        <%= render "invite_form" %>
      </div>
    <% end %>
  <% end %>
</div>