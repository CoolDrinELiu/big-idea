<% @groups&.each do |group| %>
  <div class="flex flex-row mt-5 w-full items-center">
    <div class="p-5 bg-white rounded-lg border border-gray-200 shadow-md dark:bg-gray-800 dark:border-gray-700">
      <%= link_to group_path(group), data: { turbo: false } do %>
        <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white"><%= group.name %></h5>
      <% end %>
      <span class="bg-blue-100 text-blue-800 text-xs font-semibold mr-2 px-2.5 py-0.5 rounded dark:bg-blue-200 dark:text-blue-800">
        <%= pluralize(group.members_count, "member") %>
      </span>
      <span class="bg-yellow-100 text-yellow-800 text-xs font-semibold mr-2 px-2.5 py-0.5 rounded dark:bg-yellow-200 dark:text-yellow-900">
        <%= "#{group.posts_count} Posts" %>
      </span>

      <span class="bg-pink-100 text-pink-800 text-xs font-semibold mr-2 px-2.5 py-0.5 rounded dark:bg-pink-200 dark:text-pink-900">
        Last activity <%= time_ago_in_words group.updated_at %> ago.
      </span>
    </div>

    <div class="p-5">
      <%= render partial: "group_actions", locals: { group: group } %>
    </div>
  </div>
<% end %>

<% if @groups.present? %>
  <div class="p-5">
    <%== pagy_nav(@pagy) %>
  </div>
<% end %>
