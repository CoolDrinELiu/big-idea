<div class="flex flex-row justify-between">
  <ul class="flex border-b pt-5">
      <li class="-mb-px mr-1">
        <%= link_to 'All Groups', root_path(tab: "all"), class: "bg-white inline-block rounded-t py-2 px-4 text-blue-700 font-semibold #{active_tab_class 'all'}", data: { turbo: false } %>
      </li>
      <% if current_user %>
        <li class="mr-1">
          <%= link_to 'Created By Me', root_path(tab: "owned"), class: "bg-white inline-block py-2 px-4 text-blue-500 hover:text-blue-800 font-semibold #{active_tab_class 'owned'}", data: { turbo: false } %>
        </li>
        <li class="mr-1">
          <%= link_to 'Where I am member', root_path(tab: "member"), class: "bg-white inline-block py-2 px-4 text-blue-500 hover:text-blue-800 font-semibold #{active_tab_class 'member'}", data: { turbo: false } %>
        </li>
      <% end %>
  </ul>
  <% if user_signed_in? %>
    <button data-modal-toggle="new-group-modal" class="py-2 px-3 text-sm font-medium text-center text-white bg-blue-700 rounded-lg hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">
      Create a new group
    </button>
  <% else %>
    <%= button_to 'Create a new group', new_user_session_path, class: "py-2 px-3 text-sm font-medium text-center text-white bg-blue-700 rounded-lg hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800", method: :get, data: {turbo: false} %>
  <% end %>
</div>
